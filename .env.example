# Property Monitor Configuration

# Application Settings
PROPMON_APP_NAME=PropertyMonitor
PROPMON_ENVIRONMENT=production
PROPMON_LOG_LEVEL=INFO

# Scraping Settings
PROPMON_SCRAPE_INTERVAL_SECONDS=900
PROPMON_MAX_RETRIES=3
PROPMON_REQUEST_TIMEOUT=30.0
PROPMON_MAX_PRICE=10000
PROPMON_TIME_WINDOW_HOURS=24

# Storage Settings
PROPMON_DATA_DIR=./data
PROPMON_BACKUP_ENABLED=true
PROPMON_BACKUP_RETENTION_DAYS=7

# Discord Webhook (REQUIRED)
# Get your webhook URL from Discord: Server Settings > Integrations > Webhooks
PROPMON_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
PROPMON_DISCORD_RATE_LIMIT_PER_MINUTE=25

# Property URLs to Monitor
PROPMON_PROPERTY_URLS=["https://nepalpropertybazaar.com/search-results/?status%5B%5D=for-rent&location%5B%5D=&areas%5B%5D="]
